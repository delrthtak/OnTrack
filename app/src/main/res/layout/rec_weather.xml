<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#D1C8E1"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/text_day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#D5D2D2"
        android:paddingLeft="6dp"
        android:paddingTop="3dp"
        android:paddingRight="3dp"
        android:paddingBottom="3dp"
        android:text="Thursday, 9/30"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_temp_mm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:paddingLeft="6dp"
        android:paddingTop="3dp"
        android:paddingRight="3dp"
        android:paddingBottom="3dp"
        android:text="0°F/0°F"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_day" />

    <TextView
        android:id="@+id/text_description7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:paddingBottom="3dp"
        android:text="Broken Clouds"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/text_temp_mm"
        app:layout_constraintStart_toStartOf="@+id/text_temp_mm"
        app:layout_constraintTop_toBottomOf="@+id/text_temp_mm" />

    <TextView
        android:id="@+id/text_pop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:paddingRight="3dp"
        android:paddingBottom="3dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:text="(0% precipitation)"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_temp_mm"
        app:layout_constraintTop_toTopOf="@+id/text_temp_mm" />

    <TextView
        android:id="@+id/text_uvi7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:paddingBottom="3dp"
        android:text="UV Index: 5"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/text_pop"
        app:layout_constraintTop_toBottomOf="@+id/text_pop" />

    <TextView
        android:id="@+id/text_morn_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0°F"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_day_temp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_uvi7"
        app:layout_constraintVertical_bias="0.100000024" />

    <TextView
        android:id="@+id/text_day_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0°F"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_morn_temp"
        app:layout_constraintEnd_toStartOf="@+id/text_eve_temp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/text_morn_temp"
        app:layout_constraintTop_toTopOf="@+id/text_morn_temp" />

    <TextView
        android:id="@+id/text_eve_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0°F"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_day_temp"
        app:layout_constraintEnd_toStartOf="@+id/text_night_temp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/text_day_temp"
        app:layout_constraintTop_toTopOf="@+id/text_day_temp" />

    <TextView
        android:id="@+id/text_night_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0°F"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_eve_temp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/text_eve_temp"
        app:layout_constraintTop_toTopOf="@+id/text_eve_temp" />

    <TextView
        android:id="@+id/text_8am7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="8am"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/text_morn_temp"
        app:layout_constraintStart_toStartOf="@+id/text_morn_temp"
        app:layout_constraintTop_toBottomOf="@+id/text_morn_temp" />

    <TextView
        android:id="@+id/text_1pm7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1pm"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/text_8am7"
        app:layout_constraintEnd_toEndOf="@+id/text_day_temp"
        app:layout_constraintStart_toStartOf="@+id/text_day_temp"
        app:layout_constraintTop_toTopOf="@+id/text_8am7" />

    <TextView
        android:id="@+id/text_5pm7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5pm"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/text_1pm7"
        app:layout_constraintEnd_toEndOf="@+id/text_eve_temp"
        app:layout_constraintStart_toStartOf="@+id/text_eve_temp"
        app:layout_constraintTop_toTopOf="@+id/text_1pm7" />

    <TextView
        android:id="@+id/text_11pm7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11pm"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/text_5pm7"
        app:layout_constraintEnd_toEndOf="@+id/text_night_temp"
        app:layout_constraintStart_toStartOf="@+id/text_night_temp"
        app:layout_constraintTop_toTopOf="@+id/text_5pm7" />

    <ImageView
        android:id="@+id/image_weather_icon7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toTopOf="@+id/text_night_temp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guide"
        app:layout_constraintTop_toBottomOf="@+id/text_day"
        app:srcCompat="@mipmap/_04n" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_begin="247dp"
        app:layout_constraintHorizontal_bias="0.79"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>